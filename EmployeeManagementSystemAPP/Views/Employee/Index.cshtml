@model IEnumerable<EmpManagementSystemAPI.Models.Employee>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee List</title>
    <style>
        table {
        width: 100%;
        border-collapse: collapse;
        font-family: Arial, sans-serif;
    }

    .table-header {
        background-color: gray;
        color: white;
        text-align: center;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border: 1px solid #ddd;
    }

    td {
        font-size: 14px;
    }

    th {
        font-size: 16px;
        font-weight: bold;
    }

   /*  tr:nth-child(even) {
        background-color: #f9f9f9;
    } */

   /*  tr:hover {
        background-color: #e9f7e9;
    } */

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f1f1f1;
    }

    /* .table-hover tbody tr:hover {
        background-color: #d1f7d1;
    } */

    /* Action Buttons Styling */
    .btn {
        font-size: 14px;
        padding: 5px 10px;
        text-decoration: none;
        border-radius: 5px;
        cursor: pointer;
        margin: 0 5px;
    }

    .btn-info {
        background-color: #17a2b8;
        color: white;
        border: none;
    }

    .btn-info:hover {
        background-color: #138496;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
        border: none;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    /* Toast Notification Styling */
    .toast {
        opacity: 0;
        transition: opacity 0.6s ease-in-out;
    }

    .toast.show {
        opacity: 1;
    }

    .toast-header {
        background-color: #28a745;
        color: white;
        font-weight: bold;
        padding: 10px;
    }

    .toast-body {
        padding: 10px;
        background-color: #e9f7e9;
        font-size: 14px;
        color: #333;
    }

    /* Modal and Delete Button */
    .delete-modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
        z-index: 9999;
    }

    .delete-modal-content {
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        text-align: center;
        width: 300px;
    }
    </style>
</head>
<body>
    <div>
        <h3><strong>Employee List</strong> </h3>
        <a href="../Employee/Create" class="btn btn-primary mb-2">+ Add</a>
        <a class="btn btn-success float-end" asp-action="Login" asp-controller="Login">Back</a>
    </div>
    
    <!-- Table with improved CSS -->
<table class="table table-striped table-hover table-bordered" id="tblEmpDetailsId">
    <thead>
        <tr class="table-header">
            <th>ID</th>
            <th>Name</th>
            <th>Designation</th>
            <th>Address</th>
            <th>Gender</th>
            <th>Salary</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Designation</td>
                    <td>@item.Address</td>
                    <td>@item.Gender</td>
                    <td>@item.Salary</td>
                    <td>@item.Email</td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a onclick="showDeleteModal(@item.Id)" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center">No Data Found</td>  <!-- Message for no data found -->
            </tr>
        }
    </tbody>
</table>

    
</body>
</html>
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this item? 
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="confirmDelete()">Delete</button>
            </div>
        </div>
    </div>
</div>

<script>

    var ItemId = null;

    function showDeleteModal(id) {
        debugger;
        ItemId = id;
        $('#deleteModal').modal('show');
    }

    function confirmDelete() {
        debugger;
        if (ItemId > 0) 
        {
            $.ajax({
                url: '/Employee/DeleteEmployee/' + ItemId,
                type: 'DELETE',
                success: function (response) {
                    $('#deleteModal').modal('hide');
                    alert("Item deleted successfully.");
                    location.reload();
                    $('#item-' + ItemId).remove();
                },
                error: function (xhr, status, error) {
                    alert("Failed to delete item: " + error);
                    $('#deleteModal').modal('hide');
                }
            });
        }
    }
</script>

